{
  "name": "tree-sitter-arduino",
  "version": "0.21.0",
  "license": "MIT",
  "description": "Arduino grammar for tree-sitter",
  "repository": "tree-sitter-grammars/tree-sitter-arduino",
  "main": "bindings/node",
  "types": "bindings/node",
  "author": {
    "name": "ObserverOfTime",
    "email": "chronobserver@disroot.org",
    "url": "https://observeroftime.github.io/"
  },
  "funding": {
    "url": "https://github.com/sponsors/ObserverOfTime",
    "type": "github"
  },
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "arduino"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm -o tree-sitter-arduino.so",
    "start": "tree-sitter playground",
    "test": "node --test"
  },
  "dependencies": {
    "node-addon-api": "^8.0.0",
    "node-gyp-build": "^4.8.1"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.1"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "tree-sitter-c": ">=0.21.3",
    "tree-sitter-cli": "^0.22.6",
    "tree-sitter-cpp": ">=0.22.1",
    "prebuildify": "^6.0.1"
  },
  "overrides": {
    "tree-sitter-c": {
      "node-addon-api": "$node-addon-api"
    }
  },
  "tree-sitter": [
    {
      "scope": "source.arduino",
      "highlights": "queries/highlights.scm",
      "tags": "queries/tags.scm",
      "file-types": [
        "ino"
      ]
    }
  ]
}
